<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="techad_edc_popover.service_url_util" class="Techad\EdcPopoverBundle\Service\UrlUtil"
                 public="false">
            <argument key="$serverUrl">%edc_popover.server.url%</argument>
            <argument key="$helpContext">%edc_popover.server.help_context%</argument>
        </service>
        <service id="Techad\EdcPopoverBundle\Service\DocumentationReader" public="false">
            <argument type="service" id="techad_edc_popover.service_url_util"/>
            <argument key="$defaultLanguageCode">%edc_popover.popover.default_language%</argument>
        </service>
        <service id="techad_edc_popover.service_key_util" class="Techad\EdcPopoverBundle\Service\DocumentationReader"
                 public="false">
        </service>
    </services>
</container>
